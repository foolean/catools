
# Size of the certificate key size in bits
CA_KEY_SIZE="4096"

# Length of autogenerated passwords in bytes
CA_PW_LEN="15360"

# Base and OCSP URLs for the CA
CA_BASE_URL="https://pki.yourdomain.org"
CA_OCSP_URL="https://ocsp.yourdomain.com"

# Certificate details (country and state)
CA_COUNTRY="US"
CA_STATE="YOUR_STATE"

# Organization Name (e.g. Fabulous Operational Organazation (Foo))
CA_ORGANIZATION_NAME="Fabulous Operational Organization (FOO)"

# Organization short name (e.g. Foo)
CA_ORGANIZATION_SHORT_NAME="Foo"

# Email address for the GPG certificate
CA_GPG_EMAIL="pki@yourdomain.com"

# Lifetime of the created certificates, in days, for the various CAs
CA_ROOT_DAYS="3652"
CA_INTERMEDIATE_DAYS="3652"
CA_IDENTITY_DAYS="1095"
CA_DEVICE_DAYS="1095"
CA_PUPPET_DAYS="730"

######################################################
# You should be safe to leave the rest of this alone #
######################################################

# Name of the CA GPG key
CA_GPG_NAME="${CA_ORGANIZATION_SHORT_NAME} Certificate Authority"

# Common name (CN) of the root certificate authority
CA_ROOT_CN="${CA_ORGANIZATION_SHORT_NAME} Root Certificate Authority"

# Common name (CN) of the intermediate certificate authority
CA_INTERMEDIATE_CN="${CA_ORGANIZATION_SHORT_NAME} Intermediate Certification Authority"

# Common name (CN) of the device certificate authority
CA_DEVICE_CN="${CA_ORGANIZATION_SHORT_NAME} Device Certification Authority"

# Common name (CN) of the identity certificate authority
CA_IDENTITY_CN="${CA_ORGANIZATION_SHORT_NAME} Identity Certification Authority"

# Common name (CN) of the puppet certificate authority
CA_PUPPET_CN="${CA_ORGANIZATION_SHORT_NAME} Puppet Certification Authority"

# Export the variables
export CA_GPG_EMAIL
export CA_GPG_NAME
export CA_KEY_SIZE
export CA_PW_LEN
export CA_BASE_URL
export CA_OCSP_URL
export CA_COUNTRY
export CA_STATE
export CA_ORGANIZATION_NAME
export CA_ORGANIZATION_SHORT_NAME
export CA_ROOT_CN
export CA_INTERMEDIATE_CN
export CA_DEVICE_CN
export CA_IDENTITY_CN
export CA_PUPPET_CN
export CA_ROOT_DAYS
export CA_INTERMEDIATE_DAYS
export CA_DEVICE_DAYS
export CA_IDENTITY_DAYS
export CA_PUPPET_DAYS
